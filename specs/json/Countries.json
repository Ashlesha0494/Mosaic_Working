{
  "meta": {
    "title": "Country Data Analysis",
    "description": "Visualizations showing various economic and demographic indicators for different countries. Select a region on the plots to cross-filter the charts."
  },
  "data": {
    "country_data": {
      "type": "parquet",
      "file": "data/Countries.parquet"
    }
  },
  "params": {
    "bandwidth": 40,
    "thresholds": 10
  },
  "vconcat": [
    {
      "hconcat": [
        {
          "input": "slider",
          "label": "Bandwidth (Ïƒ)",
          "as": "$bandwidth",
          "min": 1,
          "max": 100
        },
        {
          "input": "slider",
          "label": "Thresholds",
          "as": "$thresholds",
          "min": 2,
          "max": 20
        }
      ]
    },
    {
      "plot": [
        {
          "mark": "rectY",
          "data": {
            "from": "country_data"
          },
          "x": "GDP",
          "y": "Unemployment",
          "fill": "steelblue",
          "bandwidth": "$bandwidth"
        },
        {
          "mark": "contour",
          "data": {
            "from": "country_data"
          },
          "x": "GDP",
          "y": "Unemployment",
          "stroke": "steelblue",
          "bandwidth": "$bandwidth",
          "thresholds": "$thresholds"
        },
        {
          "mark": "dot",
          "data": {
            "from": "country_data"
          },
          "x": "GDP",
          "y": "Unemployment",
          "fill": "currentColor",
          "r": 1
        }
      ],
      "xAxis": "bottom",
      "xLabelAnchor": "center",
      "yAxis": "right",
      "yLabelAnchor": "center",
      "margins": {
        "top": 5,
        "bottom": 30,
        "left": 5,
        "right": 50
      },
      "width": 700,
      "height": 480
    }
  ]
}
